{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start AQ Accounting Site - Port 8080",
			"type": "shell",
			"command": "python",
			"args": ["-m", "http.server", "8080"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/public"
			}
		},
		{
			"label": "Open with Live Server",
			"type": "shell",
			"command": "echo",
			"args": [
				"Right-click on index.html and select 'Open with Live Server' to preview the website"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}